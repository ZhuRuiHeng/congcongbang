page{
   background: #f0eff5;
   font-size: 24rpx;
}
.box{
  text-align: center;
  width: 90%;
}
.box image{
  width: 120rpx;
  height: 102rpx;
  margin: 30rpx 0;
}
.box .money{
  font-size: 38rpx;
  font-weight: bold;
  margin: 20rpx;
}
.button {
    width: 100%;
    height: 42px;
    margin-top:28px;
    background-color: #51a938;
    color: #fff;
    font-size: 15px;
    text-align: center;
    line-height: 42px;
    border-radius: 10rpx;
 }
 .button.bg{
   background: #fff;
   color: #000;
 }
 .zan-toast {
  position: fixed;
  top: 35%;
  left: 20%;
  transform: translateZ(0) translateY(-100%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  width: 60%;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
.bg{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  padding: 30rpx 10rpx;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
}
.zindex .recharge{
  text-align: center;
  padding:0 0 30rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.input{
  display:flex;
  justify-content: flex-start;
  margin: 30rpx;
  padding:0 0 30rpx 0rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1px solid #f7f7f7;
}
.button.next{
  height:36px;
  line-height:36px;
  width: 80%;
  margin: 60rpx auto 30rpx;
}
