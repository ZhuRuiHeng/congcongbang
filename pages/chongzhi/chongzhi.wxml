<!--引入模板  -->
<import src="../../dist/toast/index.wxml" />
<template is="zan-toast" data="{{ zanToast }}"></template>
<view class='container'>
    <view class='box'>
        <image src="../img/money.png" mode='widthFix'></image>
        <view class='title'>我的余额</view>
        <view class='money'>￥{{allMoney}}</view>
        <view class='button' bindtap='zindex'>充值</view> 
        <view class='button' bindtap='cash' style='background:#fff;color:#000;'>提现</view> 
    </view>  
</view> 
<view class='bg' wx:if="{{zindex}}">
    <view class='zindex'>
      <view class='recharge'>充值金额</view>
      <view class='input'> ￥<input type="digit"  bindinput="bindKeyInput" auto-focus></input></view>
      <view bindtap='recharge' class='button next'>下一步</view>
    </view>
</view>
